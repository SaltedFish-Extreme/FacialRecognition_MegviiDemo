<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <padding android:left="2dp" android:right="2dp" />
            <solid android:color="@color/whitesmoke" />
            <stroke android:width="2dp" android:color="@color/fuchsia" />
        </shape>
    </item>

    <item android:state_window_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <padding android:left="2dp" android:right="2dp" />
            <solid android:color="@color/item_bg" />
            <stroke android:width="2dp" android:color="@color/darkgrey" />
        </shape>
    </item>
</selector>