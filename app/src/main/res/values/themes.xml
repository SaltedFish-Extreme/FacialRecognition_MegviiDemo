<resources>
    <!--初始化更新弹框样式-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--文本输入框样式-->
    <style name="TextBox">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/dp_15</item>
        <item name="android:paddingEnd">@dimen/dp_15</item>
        <item name="android:background">@drawable/shape_bg_rect</item>
        <item name="android:inputType">text</item>
    </style>
    <!--对话框标题样式-->
    <style name="DialogTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">@dimen/dp_15</item>
        <item name="android:textSize">@dimen/sp_30</item>
    </style>
    <!--对话框关闭按钮样式-->
    <style name="DialogClose">
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_width">@dimen/dp_50</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:src">@drawable/mybutton_background</item>
    </style>
    <!--对话框操作按钮样式-->
    <style name="DialogButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:background">@drawable/btn_nor_down</item>
        <item name="android:layout_marginStart">@dimen/dp_5</item>
    </style>
    <!--识别Toast文本样式-->
    <style name="IdentifyToast">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/Gray_black</item>
        <item name="android:textSize">@dimen/sp_30</item>
    </style>
    <!--录脸对话框RelativeLayout样式-->
    <style name="FaceRecordingDialog">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
        <item name="android:padding">@dimen/dp_2</item>
    </style>
</resources>