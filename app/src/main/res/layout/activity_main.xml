<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <com.example.myapplication.camera.CameraPreview
        android:id="@+id/preview_rgb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <com.example.myapplication.camera.CameraPreview
        android:id="@+id/preview_ir"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.myapplication.util.FaceView
        android:id="@+id/fcview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_group"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_30"
        android:contentDescription="@null"
        android:src="@mipmap/set"
        app:tint="@color/blue" />

    <ImageView
        android:id="@+id/iv_face"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_above="@id/iv_group"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_35"
        android:contentDescription="@null"
        android:src="@mipmap/add"
        app:tint="@color/red" />

    <ImageView
        android:id="@+id/iv_log"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/iv_group"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_40"
        android:contentDescription="@null"
        android:src="@mipmap/search"
        app:tint="@color/green" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:layout_alignParentBottom="true"
        android:background="@color/Translucent"
        android:transcriptMode="alwaysScroll"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_meg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tomato"
            android:textSize="@dimen/sp_15" />
    </ScrollView>

</RelativeLayout>